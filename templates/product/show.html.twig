{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - SymfoCar{% endblock %}

{% block body %}


<div  class="wrapper">
    <h1>{{ product.name }}</h1>


    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset('assets/images/uploads/' ~ product.illustration) }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-6">
            <div class="btns col-2 mb-3">
                
                <a href="{{ path('add_to_cart', {'id':product.id} )}}" ><i class="fa-solid fa-cart-plus fs-1 text-success"></i></a>
                <a href="{{ path('app_cart')}}" class="mt-2"><i class="fa-solid fa-cart-shopping fs-1 text-secondary-emphasis" ></i></a>
            </div>

            <h2>{{ product.subtitle }}</h2>
            <p class="my-2 fs-3 fw-bold text-primary">{{ (product.price /100)|number_format(0,',', ' ') }} € </p> <hr>
            <span>Energie: {{ product.energy }}</span> <br>
            <span>Carrosserie: {{ product.category }}</span> <br>
            <p>
                <a class="text-decoration-none mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
                    Afficher description
                </a>
            </p>
            <div class="collapse" id="collapseExample" style="">
                <div class="card card-body">
                    <p class="card-text fs-6 text-justify">
                        {{ product.description }}
                    </p>
                    <a href="{{ path('add_to_cart', {'id':product.id} )}}" class="btn btn-primary mb-4 current-btn">Commander</a>
                </div>
            </div>
        </div>
    </div>
    <a class="btn btn-primary current-btn" href="{{path('app_products')}}">Liste des voitures</a>
