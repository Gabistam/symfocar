{% extends 'base.html.twig' %}

{% block title %}Ma commande - Symfocars{% endblock %}

{% block body %}


    <div class="wrapper">
        <h1>Ma commande</h1>
        <a href="{{ path('app_account_order')}}">Retour</a>
        <hr>

        <strong>Commande passé le :</strong> {{ order.createdAt | date('d/m/Y à H:i') }} <br>
        <strong>Numéro de commande :</strong> {{ order.reference }} <br>
        <strong>transporteur choisi :</strong> {{ order.carriername }} <br>
        <hr>
        <strong>Details</strong>

        <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Produit</th>
                        <th scope="col">quantité</th>
                        <th scope="col">Prix Unitaire</th>
                        <th scope="col">Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in order %}
                        <tr>
                            <td>{{ order.product }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ product.product.price | number_format(2, ',', ' ') }} €</td>
                            <td>{{ (product.total / 100) | number_format(2, ',', ' ') }} €</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="text-right">
                    <strong>Sous-total :</strong> {{ (order.getTotal / 100) | number_format(2, ',', ' ') }} € <br>
                    <strong>Livraison :</strong> {{ (order.carrierprice / 100) | number_format(2, ',', ' ') }} € <br>
                    <strong>Total :</strong> {{ (order.getTotalTTC / 100) | number_format(2, ',', ' ') }} € <br>
                </div>

    </div>
{% endblock %}