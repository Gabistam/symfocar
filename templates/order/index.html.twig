{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Symfocars{% endblock %}

{% block body %}


<div class="wrapper">
   <h1>Valider ma commander</h1>
    <hr>
    <p class="mt-5 mb-5">{{app.user.firstname}}, veuillez choisir vos préférences avant de passer votre commande</p>  

    <div class="row">
        <div class="col-md-6">
            <b>Choisir mon adresse de livraison</b>
            <hr>
            {% set formhtml %}
                {{form(form)}}
            {% endset %}
            
            {{formhtml|replace({'[br]' : '<br/>'})|raw}}
        </div>
        <div class="col-md-6">
            <b>Choisir mon adresse de facturation</b>
            <hr>
        </div>
    </div>
    <hr>



</div>
{% endblock %}
